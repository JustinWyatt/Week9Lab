@model List<Week9Lab.Models.AllUsersVM>

<ul>
    @foreach (var item in Model)
    {

        <li>
            @Html.ActionLink(item.Name, "Start", "Twitter", new { userid = item.Id }, null)
            <div class="follow">
                <p data-id="@item.Id">Follow</p>
            </div>
        </li>
    }
</ul>

@section scripts{
    <script>
        $('.follow').click('.unfollow', function () {
            $.ajax({
                method: "POST",
                url: "@Url.Action("Follow", "Twitter")",
                data: { id: $(this).data("id") }
            })


        $('.follow').click('.unfollow', function ()
        {
            $.ajax({
                method: "POST",
                url: "@Url.Action("Unfollow", "Twitter")",
                data: { id: $(this).data("id") }
        })
    </script>
}